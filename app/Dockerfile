FROM python:3.11-slim
ENV PYTHONDONTWRITEBYTECODE=1 \
PYTHONUNBUFFERED=1 \
PORT=8080


WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY main.py .


CMD ["gunicorn", "-w", "1", "--threads", "2", "--timeout", "120", "-k", "gthread", "-b", "0.0.0.0:8080", "main:app"]